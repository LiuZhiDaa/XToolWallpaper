<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/lineColors"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvAlertDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="27dp"
            android:gravity="center"
            android:text=""
            android:textColor="#4A4A4A"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dialog_custom_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_negative"
            style="@style/text_middle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text=""
            android:visibility="visible" />


        <View
            android:id="@+id/view_deliver"
            android:layout_width="1dp"
            android:background="@color/bg_white"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_dialog_positive"
            style="@style/text_middle_black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/positiveTvColor" />
    </LinearLayout>
</LinearLayout>